<settings>
	<servers>
		<server>
			<id>snapshots</id>
			<username>${internal.repo.username}</username>
			<password>${internal.repo.password}</password>
		</server>
		<server>
			<id>releases</id>
			<username>${internal.repo.username}</username>
			<password>${internal.repo.password}</password>
		</server>
	</servers>

	<mirrors>
    <mirror>
      <!--This sends everything else to /public -->
      <id>nexus</id>
      <mirrorOf>*</mirrorOf>
      <url>http://nexus-devops.apps.ocp3.local.net/repository/maven-public/</url>
    </mirror>
  </mirrors>
  
  <profiles>
		<profile>
			<id>ami</id>
			<repositories>
				<repository>
					<id>snapshots</id>
					<name>SnapShots</name>
					<url>http://nexus-devops.apps.ocp3.local.net/repository/maven-snapshots/</url>
				</repository>
				<repository>
					<id>releases</id>
					<name>Releases</name>
					<url>http://nexus-devops.apps.ocp3.local.net/repository/maven-releases/</url>
				</repository>
			</repositories>
		</profile>
	</profiles>

	<activeProfiles>
		<activeProfile>ami</activeProfile>
	</activeProfiles>
  
</settings>